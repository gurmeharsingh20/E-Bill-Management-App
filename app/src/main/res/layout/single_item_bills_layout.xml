<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/bill_item_selector">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bill_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#DAA520"
                android:textStyle="bold"
                tools:text="Customer Name" />

            <TextView
                android:id="@+id/bill_phone_number"
                android:layout_marginTop="10dp"
                android:textColor="#DAA520"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1234567890" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bill_total_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:textColor="#DAA520"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="28sp"
                tools:text="2000" />

            <TextView
                android:id="@+id/bill_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginTop="07dp"
                android:textColor="#DAA520"
                android:textSize="20sp"
                android:gravity="right"
                tools:text="24-07-2017" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/bill_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp" />

</LinearLayout>
